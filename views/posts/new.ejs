<% layout('layouts/boilerplate') -%>
<h1>New Posts</h1>
<form action='/posts' method='POST' enctype='multipart/form-data'>
    <div>
        <label for='title'>Title</label>
        <input type='text' name='post[title]' id='title' placeholder='Title'>
    </div>
    <div>
        <label for='price'>Price</label>
        <input type='number' name='post[price]' id='price' placeholder='Price' step='.01'>
    </div>
    <div>
        <label for='images'>Image</label>
        <input type='file' accept='images/*' name='images' id='images' multiple>
    </div>
    <div>
        <label for='desc'>Description</label>
        <textarea type='text' name='post[desc]' id='desc' placeholder='Description'></textarea>
    </div>
    <div>
        <label for='loc'>Location</label>
        <input type='text' name='post[location]' id='loc' placeholder='Location'>
    </div>
    <input type='submit' value='submit'>
</form>